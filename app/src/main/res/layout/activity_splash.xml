<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/primary"
    android:gravity="clip_horizontal"
    tools:context="in.silive.bo.Splash">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/centre_placeholder"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/rect_one"
                android:layout_margin="3dp"
                android:background="@color/rectangle_color"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/img_b"
                android:src="@drawable/b"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/rect_two"
                android:layout_margin="3dp"
                android:background="@color/rectangle_yellow"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/y"
                android:id="@+id/img_y"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/rect_three"
                android:layout_margin="3dp"
                android:background="@color/rectangle_color"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/t"
                android:id="@+id/img_t"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/rect_four"
                android:layout_margin="3dp"
                android:background="@color/rectangle_color"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/e"
                android:id="@+id/img_e"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/rect_five"
            android:layout_margin="3dp"

            android:background="@color/rectangle_color"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary"
                android:id="@+id/img_space"
                android:src="@drawable/space"
                android:alpha="0"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/rect_six"
                android:layout_margin="3dp"

                android:background="@color/rectangle_color"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/p"
                android:id="@+id/img_p"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/rect_seven"
                android:layout_margin="3dp"
                android:background="@color/rectangle_color"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/a"
                android:id="@+id/img_a"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/rect_eigth"
                android:layout_margin="3dp"
                android:background="@color/rectangle_color"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/d"
                android:id="@+id/img_d"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
